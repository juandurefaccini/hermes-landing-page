---
import Button from "../components/Button.astro";
---

<section id="cta" class="text-center">
  <div class="m-4 rounded-xl border bg-primary">
    <div
      class="container mx-auto flex w-full flex-col gap-11 py-12 md:max-w-6xl md:py-24"
    >
      <h1
        class="text-4xl font-medium uppercase italic tracking-tighter md:text-6xl"
      >
        ¿Qué esperás para agilizar tu negocio?
      </h1>
      <div>
        <a href="#contact">
          <Button variant="secondary">
            <span class="text-xl">¡Contactate con nosotros!</span>
          </Button>
        </a>
      </div>
    </div>
  </div>
</section>
