---
import Layout from "../layouts/Layout.astro";
import Hero from "./Hero.astro";
import Advantages from "./Advantages.astro";
import AddToMyBusiness from "./AddToMyBusiness.astro";
import WorksForMyBusiness from "./WorksForMyBusiness.astro";
import CTA from "./CTA.astro";
import StickyCTA from "../components/StickyCTA.astro";
import NavBar from "../components/NavBar.astro";
import Contact from "./Contact.astro";
import Prices from "./Prices.astro";
---

<Layout title="Hermes">
  <main>
    <!-- <NavBar /> -->
    <div class="relative h-full w-full bg-white">
      <div
        class="absolute h-full w-full bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px] [mask-image:radial-gradient(ellipse_50%_50%_at_50%_50%,#000_70%,transparent_100%)]"
      >
      </div>
      <Hero />
    </div>

    <!-- Line -->

    <section class="text-center">
      <div class="m-4 rounded-xl border bg-primary">
        <div
          class="container mx-auto flex w-full flex-col gap-11 py-12 md:max-w-6xl md:py-24"
        >
          <h1
            class="text-4xl font-medium uppercase italic tracking-tighter md:text-6xl"
          >
            Descubr√≠ los beneficios de <span class="font-bold italic text-white"
              >HERMES</span
            >
          </h1>
        </div>
      </div>
    </section>

    <Advantages />
    <!-- <AddToMyBusiness /> -->
    <!-- <WorksForMyBusiness /> -->
    <CTA />
    <Prices />
    <Contact />
    <StickyCTA />
  </main>
</Layout>
