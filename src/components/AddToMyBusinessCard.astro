---
type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<div class="flex items-center md:block">
  <div class="flex items-center justify-center p-2 h-32 md:p-4">
    <slot />
  </div>
  <h2 class="hidden md:block text-md md:text-3xl font-bold text-center">
    {title}
  </h2>
  <p class="text-md md:text-lg text-right md:text-center">{description}</p>
</div>
