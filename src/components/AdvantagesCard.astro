---
type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<div class="flex h-full flex-col justify-start">
  <div class="flex items-center justify-center p-2 md:p-4">
    <slot />
  </div>
  <h2 class="text-center text-sm font-bold md:text-2xl">{title}</h2>
  <p class="text-center text-xs text-text md:text-lg">{description}</p>
</div>
