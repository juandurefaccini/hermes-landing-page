---
type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<div>
  <div class="flex items-center justify-center p-2 md:p-4">
    <slot />
  </div>
  <h2 class="text-sm md:text-2xl font-bold text-center">{title}</h2>
  <p class="text-xs md:text-lg text-center">{description}</p>
</div>
