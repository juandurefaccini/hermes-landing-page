---
type Props = {
  variant?: "primary" | "secondary";
  class?: string;
  type?: "button" | "submit";
  disabled?: boolean;
};

const {
  variant = "primary",
  class: className,
  type = "button",
  disabled = false,
} = Astro.props;
---

<button
  disabled={disabled}
  type={type}
  class:list={[
    `grow px-4 py-2 rounded-3xl border`,
    variant === "primary"
      ? "bg-primary text-white font-medium "
      : "bg-background border-2",
    className,
  ]}
>
  <slot />
</button>
