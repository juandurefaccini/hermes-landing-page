---
type Props = {
  variant?: "primary" | "secondary";
  class?: string;
};

const { variant = "primary", class: className } = Astro.props;
---

<button
  class:list={[
    `grow px-4 py-1 rounded-3xl`,
    variant === "primary" ? "bg-primary" : "bg-background",
    className,
  ]}
>
  <slot />
</button>
